@import 'node_modules/normalize.css/normalize.css'

/**
 * Parallax
 */

.parallax
  perspective 1px
  perspective-origin-x 100%
  height 100vh
  overflow-x hidden
  overflow-y auto

  .parallax-layer
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    transform-origin-x 100%

    &.parallax-layer-base
      transform translateZ(0)

    &.parallax-layer-back
      transform translateZ(-1px) scale(2)

/**
 * Sections
 */

.parallax
  .home-back
    height 100vh
    background url('assets/bg-home.png') no-repeat top
    background-size cover

